<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/naveen"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/placeholder_male1"/>

            <TextView
                android:id="@+id/naveenTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Name"
                android:textSize="22dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/sandeep"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/naveen"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/placeholder_male1"/>

            <TextView
                android:id="@+id/sandeepTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Name"
                android:textSize="22dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/saurabh"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@id/naveen"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/placeholder_male1"/>

            <TextView
                android:id="@+id/saurabhTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Name"
                android:textSize="22dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rishav"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@+id/sandeep"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/saurabh"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/placeholder_male1"/>

            <TextView
                android:id="@+id/rishavTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Name"
                android:textSize="22dp"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Ok"
        android:visibility="visible"/>

</LinearLayout>