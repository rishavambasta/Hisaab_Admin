<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:layout_height="50dp"
        android:text="Month"
        android:gravity="center"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center|top">


    <LinearLayout
        android:id="@+id/naveen"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/placeholder_male1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Balance"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sandeep"
        android:layout_toRightOf="@id/naveen"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/placeholder_male1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Balance"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/saurabh"
        android:layout_below="@id/naveen"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/placeholder_male1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Balance"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rishav"
        android:layout_toRightOf="@id/saurabh"
        android:layout_below="@+id/sandeep"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/shape"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/placeholder_male1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Balance"/>
    </LinearLayout>
</RelativeLayout>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:layout_height="40dp"
        android:text="Month"
        android:gravity="center"
        android:paddingTop="20dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:layout_height="20dp"
        android:text="Month"
        android:gravity="center"
        android:paddingTop="5dp"
        />

</LinearLayout>